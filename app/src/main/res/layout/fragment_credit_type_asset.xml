<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <th.co.ask.eip_mobile.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit Type : "
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                app:typeface="robotoBold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <th.co.ask.eip_mobile.view.CustomCheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Direct Loan"
                android:textSize="18sp"
                app:typeface="roboto" />

            <th.co.ask.eip_mobile.view.CustomCheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Export Factoring"
                android:textSize="18sp"
                app:typeface="roboto" />

            <th.co.ask.eip_mobile.view.CustomCheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Leasing"
                android:textSize="18sp"
                app:typeface="roboto" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <th.co.ask.eip_mobile.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Financing Asset : "
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                app:typeface="robotoBold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:weightSum="1">

            <th.co.ask.eip_mobile.view.CustomCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Machine"
                android:textSize="18sp"
                app:typeface="roboto" />

            <th.co.ask.eip_mobile.view.CustomCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle"
                android:textSize="18sp"
                app:typeface="roboto" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|top"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <th.co.ask.eip_mobile.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open L/C : "
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                app:typeface="robotoBold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:weightSum="1">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Yes"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="No"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp" />

            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <th.co.ask.eip_mobile.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost/Credit Line : "
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                app:typeface="robotoBold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3" />

            <th.co.ask.eip_mobile.view.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text="MB."
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                app:typeface="robotoBold" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <th.co.ask.eip_mobile.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand : "
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                app:typeface="robotoBold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3" />

            <th.co.ask.eip_mobile.view.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:gravity="right"
                android:text="Specifies : "
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                app:typeface="robotoBold" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <th.co.ask.eip_mobile.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Credit Note : "
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            app:typeface="robotoBlack" />

        <th.co.ask.eip_mobile.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Issue discussed : "
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            app:typeface="robotoThinItalic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|top"
            android:orientation="vertical">

            <th.co.ask.eip_mobile.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-The purpose of new credit line : "
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"
                app:typeface="robotoBold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:weightSum="1">

            <th.co.ask.eip_mobile.view.CustomCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Replace the old one"
                android:textSize="18sp"
                app:typeface="roboto" />

            <th.co.ask.eip_mobile.view.CustomCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Support new order"
                android:textSize="18sp"
                app:typeface="roboto" />

            <th.co.ask.eip_mobile.view.CustomCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hiring replacement"
                android:textSize="18sp"
                app:typeface="roboto" />

            <th.co.ask.eip_mobile.view.CustomCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textSize="18sp"
                app:typeface="roboto" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <th.co.ask.eip_mobile.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Our competitor : "
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                app:typeface="robotoBold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:weightSum="1">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Leasing Name"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <th.co.ask.eip_mobile.view.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".15"
                android:gravity="right"
                android:text="Bank Name : "
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                app:typeface="robotoBold" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".25"
                android:gravity="center" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Other"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <th.co.ask.eip_mobile.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Our competitor : "
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                app:typeface="robotoBold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:weightSum="1">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="IRR"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <th.co.ask.eip_mobile.view.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".1"
                android:gravity="left"
                android:text="%"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                app:typeface="robotoBold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Term"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Financial Amount"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <th.co.ask.eip_mobile.view.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".1"
                android:gravity="left"
                android:text="%"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                app:typeface="robotoBold" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>