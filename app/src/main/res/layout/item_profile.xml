<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/fragment_profile_view_item_margin"
        >

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/fragment_profile_view_item_icon_width"
            android:layout_height="@dimen/fragment_profile_view_item_icon_height"
            android:src="@drawable/ic_mail_outline_white"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/fragment_profile_view_item_padding">
            <th.co.ask.eip_mobile.view.CustomTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email : "
                android:textColor="@color/colorDarkPrimaryText"
                android:textSize="@dimen/fragment_profile_text_secondary_size"
                app:typeface="robotoBold"
                />
            <th.co.ask.eip_mobile.view.CustomTextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nitiwat.li@ask.co.th"
                android:textColor="@color/colorDarkPrimaryText"
                android:textSize="@dimen/fragment_profile_text_subsecondary_size"
                app:typeface="robotoMedium"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>